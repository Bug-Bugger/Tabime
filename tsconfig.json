{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./public/assets/*"],
      "@src/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.ja",
    "src/components/Reusable/GradientButton.jsx",
    "src/components/Pages/FrontPage/Description.tsx",
    "src/components/Reusable/MeshGradientBackground.tsx",
    "public/assets/pointer.tsx"
  ],
  "exclude": ["node_modules"]
}
